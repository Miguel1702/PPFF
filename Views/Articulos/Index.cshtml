@model IEnumerable<PPFF.Models.Articulo>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<form id="searchFi" method="post">

    <span>Busqueda: </span> <input type="text" id="search" name="search" />
    <input type="submit" id="searchbt" value="buscar" />
</form>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th>
