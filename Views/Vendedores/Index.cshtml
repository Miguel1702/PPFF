@model IEnumerable<PPFF.Models.Vendedore>

@{
    ViewBag.Title = "Index";
}

<h2>Vendedores</h2>

<p>
    <a name="addBtn" class="btn" style="background: #a0c2ff; color: #000000;" href="@Url.Action("Create", "Vendedores")">Crear Vendedor</a>
</p>

<br />

<div>
    <form id="searchFi" method="post">

        <span>
            <input type="text" id="searchbx" style="max-width: 110px" name="search" />
            <input type="submit" id="searchbt" value="buscar" />
        </span>
    </form>
</div>

<br />

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Comision)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Estado)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Comision) <a>%</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                <a name="addBtn" class="btn btn-xs" style="background: #a0c2ff; color: #000000" href="@Url.Action("Edit", "Vendedores", new { id = item.ID })">Editar</a> |
                <a name="addBtn" class="btn btn-xs" style="background: #a0c2ff; color: #000000" href="@Url.Action("Details", "Vendedores", new { id = item.ID })">Detalles</a> |
                <a name="addBtn" class="btn btn-xs" style="background: #a0c2ff; color: #000000" href="@Url.Action("Delete", "Vendedores", new { id = item.ID })">Borrar</a>
            </td>
        </tr>
    }

</table>
